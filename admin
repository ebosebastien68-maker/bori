<body>
  <div class="card" role="main" aria-labelledby="title">
    <h1 id="title">Promouvoir un utilisateur (par e-mail)</h1>
    <p class="lead">Saisis l'e-mail, vérifie l'utilisateur et clique pour mettre son rôle à <code>admin</code>. L'utilisateur courant doit être admin ou la policy RLS doit l'autoriser.</p>

    <div class="row" style="margin-bottom:14px">
      <input id="email" class="input" type="email" placeholder="email de l'utilisateur (ex. jean@example.com)" />
      <button id="findBtn" class="btn" type="button">Rechercher</button>
      <button id="promoteBtn" class="btn btn-danger" type="button" disabled>Promouvoir en admin</button>
    </div>

    <div class="meta">
      <div class="box">
        <div style="font-weight:600; margin-bottom:8px">Utilisateur trouvé</div>
        <div id="userInfo" class="small">Aucune recherche encore.</div>
      </div>
      <div class="box">
        <div style="font-weight:600; margin-bottom:8px">Console / Résultat</div>
        <pre id="console">Prêt.</pre>
      </div>
    </div>

    <div class="status" id="status"></div>
    <footer>Ne jamais exposer la clé <code>service_role</code> dans le frontend.</footer>
  </div>

  <script type="module">
    // ATTENTION : supabaseClient.js doit exporter : export const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
    import { supabase } from './supabaseClient.js';

    const emailInput = document.getElementById('email');
    const findBtn = document.getElementById('findBtn');
    const promoteBtn = document.getElementById('promoteBtn');
    const userInfo = document.getElementById('userInfo');
    const consoleEl = document.getElementById('console');
    const statusEl = document.getElementById('status');

    let currentUserRecord = null; // { user_id, role, email }

    function log(msg){
      consoleEl.textContent = typeof msg === 'string' ? msg : JSON.stringify(msg, null, 2);
    }
    function setStatus(text, kind){
      statusEl.textContent = text || '';
      statusEl.className = kind ? kind : '';
    }

    findBtn.addEventListener('click', async () => {
      const email = emailInput.value.trim();
      if(!email){ setStatus('Renseigne un e-mail valide.', 'error'); return; }

      setStatus('Recherche en cours...', '');
      log('Recherche utilisateur...');
      promoteBtn.disabled = true;
      userInfo.textContent = 'Recherche en cours...';

      try {
        // On suppose que la table users_profile contient une colonne "email" et "user_id" et "role".
        const { data, error } = await supabase
          .from('users_profile')
          .select('user_id, role, email')
          .eq('email', email)
          .limit(1)
          .single();

        if (error) {
          if (error.code === 'PGRST116') {
            // Exemple d'erreur de permission
            setStatus('Permission refusée. Vérifie tes policies RLS ou l’authentification.', 'error');
          } else {
            setStatus('Erreur lors de la recherche.', 'error');
          }
          log(error);
          userInfo.textContent = 'Aucun utilisateur trouvé ou erreur.';
          currentUserRecord = null;
          return;
        }

        currentUserRecord = data;
        userInfo.innerHTML = `
          <div><strong>user_id:</strong> ${data.user_id}</div>
          <div><strong>email:</strong> ${data.email}</div>
          <div><strong>role actuel:</strong> ${data.role}</div>
        `;
        log('Utilisateur trouvé : ' + data.user_id);
        setStatus('Utilisateur trouvé.', 'success');
        promoteBtn.disabled = false;
      } catch (err) {
        setStatus('Erreur inconnue.', 'error');
        log(err);
        currentUserRecord = null;
      }
    });

    promoteBtn.addEventListener('click', async () => {
      if (!currentUserRecord) { setStatus('Aucun utilisateur sélectionné.', 'error'); return; }

      const confirmMsg = `Promouvoir ${currentUserRecord.email} (${currentUserRecord.user_id}) en admin ?`;
      if (!confirm(confirmMsg)) return;

      promoteBtn.disabled = true;
      setStatus('Envoi de la mise à jour...', '');
      log('Updating role to admin...');

      try {
        // Requête d'UPDATE via supabase-js
        const { data, error } = await supabase
          .from('users_profile')
          .update({ role: 'admin' })
          .eq('user_id', currentUserRecord.user_id);

        if (error) {
          setStatus('Erreur lors de la mise à jour. Vérifie permissions.', 'error');
          log(error);
          promoteBtn.disabled = false;
          return;
        }

        log({
          message: 'Mise à jour réussie',
          updated: data
        });
        userInfo.innerHTML += `<div style="margin-top:8px"><strong>→ nouveau rôle:</strong> admin</div>`;
        setStatus('Mise à jour effectuée avec succès.', 'success');
      } catch (err) {
        setStatus('Erreur inconnue lors de l\'update.', 'error');
        log(err);
      } finally {
        promoteBtn.disabled = false;
      }
    });

    // Optionnel : support "Entrée" pour rechercher
    emailInput.addEventListener('keyup', (e) => {
      if (e.key === 'Enter') findBtn.click();
    });
  </script>
</body>
